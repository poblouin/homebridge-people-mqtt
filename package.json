{
  "displayName": "Homebridge People Mqtt",
  "name": "@poblouin/homebridge-people-mqtt",
  "version": "0.0.2",
  "description": "Homebridge plugin that watches for specific network devices to toggle home occupancy on or off",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:poblouin/homebridge-people-mqtt.git"
  },
  "bugs": {
    "url": "https://github.com/poblouin/homebridge-people-mqtt/issues"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">=1.3.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "homebridge-plugin",
    "home-occupancy",
    "network-devices",
    "mqtt"
  ],
  "dependencies": {
    "mqtt": "^4.2.6",
    "ping": "^0.4.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "homebridge": "^1.3.1",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
